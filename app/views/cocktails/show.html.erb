<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="text-center">
  <% @cocktail.doses.each do |dose| %>
    <p><%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), method: :delete, class: "btn btn-primary" %>
    </p>
  <% end %>
  <p><%= link_to "Back to cocktails list", cocktails_path %> -
  <%= link_to "Add an ingredient dose", new_cocktail_dose_path(@cocktail) %></p>
</div>
