<h1 class="text-center" id="welcome-title">Cocktails list</h1>
<div class="container">
  <div class="row">
    <% Cocktail.all.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail), class: "card-link" do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cocktail.photo? ? cl_image_path(cocktail.photo.path) : 'http://placehold.it/350x150' %>')">

            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= cocktail.name %></h2>
              <p>Very cool stuff, useful and smart</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


